                    </i><span class="menu-title"><%= t(:expressions_created) %>: <%= current_user.expressions.count %></span></a>
                      
                    </li>
                    <li><i >
                        <div class="icon-bg bg-dark"></div>
                    </i><span class="menu-title"><%= t(:votations_given) %>: <%= current_user.votations.count %></span>
                      
                    </li>
                    <li><i >
                        <div class="icon-bg bg-primary"></div>
                    </i><span class="menu-title"><%= t(:votations_received) %>: <%= current_user.votations_received %></span>
                      
                    </li>
                    <li><i >
                        <div class="icon-bg bg-orange"></div>
                    </i><span class="menu-title"><%= t(:feedback) %>: <%= current_user.feedback %></span>
                       
                    </li>
                    <li><i >
                        <div class="icon-bg bg-green"></div>
                    </i><span class="menu-title"><%= t(:level) %>: <%= current_user.level %></span></li>
                    <% end %>
                </ul>
            </div>
        </nav>
            <!--END SIDEBAR MENU-->
            
