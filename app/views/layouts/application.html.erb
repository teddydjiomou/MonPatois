<!DOCTYPE html>
<html>
<head>
  <title>MonPatois</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <script type="text/javascript" src="/javascripts/test.js" ></script>
  <script type="text/javascript" src="/javascripts/jquery.js" ></script>  
  <script type='text/javascript' src='https://www.google.com/jsapi'></script>  
  <script src="http://code.jquery.com/jquery-latest.js" type="text/javascript" charset="utf-8"></script>
  <script type="text/javascript" src="/javascripts/facebox.js" ></script>
  <script type="text/javascript" src="/tag_cloud/jquery.tagcloud.js" charset="utf-8"></script>
  <!--script type="text/javascript" src="js/jquery-1.11.0.min.js"></script-->
  <script type="text/javascript" src="/javascripts/jquery.leanModal.min.js"></script>
  <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
  <link type="text/css" rel="stylesheet" href="/stylesheets/facebox.css" media="screen" />
  <link href="/themes/1/js-image-slider.css" rel="stylesheet" type="text/css" />
  <script src="/themes/1/js-image-slider.js" type="text/javascript"></script>
  <link href="/generic.css" rel="stylesheet" type="text/css" />
  <%= csrf_meta_tags %>
  
</head>
<body >
		<%= render(:partial => "layouts/header") %>
		<div id="messages">
			<p id="notice" style="background-color: #FFF;"><%= notice %></p>
			<% unless alert.nil? %>
			<p id="alert" style="color: red; background-color: #FFF;"> Erreurs:  <%= alert %></p>
			<% end %>
		</div>
	
		
		<div class="scroll">
			<marquee direction="up" scrollamount="4" height="100%">
				<table class="scroll_table">
					<% Expression.all.shuffle.each do |e| %>	
						<% if e.french? %>
							<tr><td style="font-size: 14px;"><%= 'Francais:"'+e.french+'"' %></td></tr>	
							<tr><td style="font-size: 18px;"><%= e.language.name + ': "' + e.trans+'"' %></td></tr>						
						<% end %>
						<% if e.english? %>
							<tr><td style="font-size: 14px;"><%= 'English:"'+e.english+'"' %></td></tr>	
							<tr><td style="font-size: 18px;"><%= e.language.name + ': "' + e.trans+'"' %></td></tr>	
							 <br />
						<% end %>						
						<tr><td></td></tr>
						<tr><td></td></tr>
						<tr><td></td></tr>
										
					<%end%>
				</table>
			</marquee>		
		</div>
		
		
	
		<div id="slide">
			<div id="sliderFrame">
		        <div id="slider">
		            <img src="/images/slide1.jpg"/>
		            <img src="/images/slide2.jpg"/>
		            <img src="/images/slide3.jpg"/>
		            <img src="/images/slide4.jpg"/>
		            <img src="/images/slide5.jpg"/>
		            <img src="/images/slide6.jpg"/>
		            <img src="/images/slide7.jpg"/>
		        </div>
		    </div>
	    </div>
	
		<div class="language_tag_cloud">	
			<div id="whatever">
				<br />
				<% Language.all.sort_by!{ |m| m.name.downcase }.each do |l| %>
					&nbsp;
					<% if l.verify? or (current_user and current_user.is_admin?)%>
						<a href=<%= language_path(l) %> rel=<%= rand(1..10).to_s %>><%= l.name %></a>
					<% end %>
				<%end%>
			</div>
			<br />
			<br />
			&nbsp;
			<%= link_to t(:New_language), new_language_path(), :rel => 'facebox', :class=>"default_button", :id=>"modal_trigger_add" if current_user %>
			<br />
			<br />			
		</div>			
		
		<div  id="lexiquefocus" class="wrap_down">
			<%= yield %>
		</div>
		
		<% if current_user %>
		<div class="board">	
			<table class="board_table">
				<th><%= t(:wall) %></th>
				<tr>
					<th align="left">
						<%= t(:languages_created) %>:
					</th>
					<td align="right">
						<%= current_user.languages.count %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:words_translated) %>:  
					</th>
					<td align="right">
						<%= current_user.translations.count %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:expressions_created) %>:  
					</th>
					<td align="right">
						<%= current_user.expressions.count %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:votations_given) %>:  
					</th>
					<td align="right">
						<%= current_user.votations.count %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:votations_received) %>:  
					</th>
					<td align="right">
						<%= current_user.votations_received %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:feedback) %>:  
					</th>
					<td align="right">
						<%= current_user.feedback %>
					</td>
				</tr>
				<tr>
					<th align="left">
						<%= t(:level) %>:  
					</th>
					<td align="right">
						<%= current_user.level %>
					</td>
				</tr>
			</table>
		</div>
		<% end %>
		
</body>
</html>

<script type="text/javascript">		
			$(document).ready(function () {			
			  $('#whatever a').tagcloud({
			  size: {start: 10, end: 18, unit: 'px'},
			  color: {start: '#ffa500', end: '#800000'}
				});
			});		
	    </script>