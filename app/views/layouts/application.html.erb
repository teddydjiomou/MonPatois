                    </i><span class="menu-title"><%= t(:home)%></span></a></li>                    
                    <li><a id="contact_us_form" href="/contact_form" rel='facebox'><i class="fa fa-edit fa-fw">
                        <div class="icon-bg bg-violet"></div>
                    </i><span class="menu-title"><%= t(:contact_us)%></span></a>
                      
                    </li>
                    
                       
                    <% if current_user %>      
                    <li><i >
                        <div class="icon-bg bg-blue"></div>
                    </i><span class="menu-title"><%= t(:board_table) %></span>
                    </li>
                    <li><i >
                        <div class="icon-bg bg-red"></div>
                    </i><span class="menu-title"><%= t(:languages_created) %>: <%= current_user.languages.count %></span>
                      
